# ===========================================
# SCHNITTWERK - Supabase Docker Compose Config
# ===========================================

# -----------------------------
# Database Configuration
# -----------------------------
POSTGRES_PASSWORD=

# -----------------------------
# JWT Configuration
# -----------------------------
# WICHTIG: In Produktion durch einen sicheren Secret ersetzen!
JWT_SECRET=
JWT_EXPIRY=

# -----------------------------
# Supabase Keys
# -----------------------------
# Diese Keys sind mit dem obigen JWT_SECRET signiert
# ANON_KEY: Für öffentliche/anonyme Anfragen (eingeschränkte Rechte)
ANON_KEY=

# SERVICE_ROLE_KEY: Für Backend-Services (volle Admin-Rechte, NIEMALS im Frontend verwenden!)
SERVICE_ROLE_KEY=

# -----------------------------
# Site Configuration
# -----------------------------
SITE_URL=
ADDITIONAL_REDIRECT_URLS=

# -----------------------------
# Auth Settings
# -----------------------------
DISABLE_SIGNUP=
ENABLE_EMAIL_SIGNUP=
ENABLE_ANONYMOUS_USERS=
ENABLE_EMAIL_AUTOCONFIRM=

# -----------------------------
# Kong Dashboard (optional)
# -----------------------------
DASHBOARD_PASSWORD=

# -----------------------------
# Realtime
# -----------------------------
SECRET_KEY_BASE=

# -----------------------------
# Edge Functions
# -----------------------------
FUNCTIONS_VERIFY_JWT=

# -----------------------------
# SMTP Configuration (optional)
# Für E-Mail-Versand auskommentieren und konfigurieren
# -----------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_ADMIN_EMAIL=admin@example.com

# -----------------------------
# Stripe Configuration (optional)
# -----------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------
# Twilio Configuration (optional)
# -----------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------
# Feature Flags
# Set to 'false' to disable features
# -----------------------------
NEXT_PUBLIC_FEATURE_SHOP_ENABLED=true
NEXT_PUBLIC_FEATURE_BOOKING_ENABLED=true
NEXT_PUBLIC_FEATURE_GALLERY_ENABLED=true

